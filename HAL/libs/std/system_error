#include <string>
#include <stdexcept>
#include <type_traits>

#include <cerrno>
#include <ostream>

_STLP_BEGIN_NAMESPACE

class error_category;
class error_code;
class error_condition;
class system_error;

template <class T>
struct is_error_code_enum :
        public false_type
{ };

template <class T>
struct is_error_condition_enum :
        public false_type
{ };

